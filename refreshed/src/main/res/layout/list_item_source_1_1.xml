<?xml version="1.0" encoding="utf-8"?>
<xyz.jienan.refreshed.ui.SquareCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:descendantFocusability="blocksDescendants"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:foreground="@drawable/source_foreground"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_source_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            tools:text="Australia's most trusted source of local, national and world news. Comprehensive, independent, in-depth analysis, the latest business, sport, weather and more."/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_source_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:maxLines="3"
        android:layout_margin="10dp"
        android:gravity="center"
        tools:text="ABC News (AU)"
        android:layout_gravity="center"
        app:autoSizeTextType="uniform"
        app:autoSizeMaxTextSize="30sp"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeStepGranularity="1dp"
        android:textColor="#FFF"
        android:textStyle="bold"/>

    <CheckBox
        android:id="@+id/cbx_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:focusable="false"
        android:clickable="false"/>


</xyz.jienan.refreshed.ui.SquareCardView>